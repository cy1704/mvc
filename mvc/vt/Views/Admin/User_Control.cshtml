@model List<DBModel.User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User_Control</title>
    <link href="~/Content/Admin/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Admin/js/index.js"></script>
</head>
<body style="width:97.5%;">
    @if (Model != null)
    {
        <div class="dyj_grzx">
            <div class="grzx_top">
                <h1>用户管理</h1>
            </div>
            <div class="grzx_main">
                <ul class="main_ul">
                    <li><input type="button" value="全选" class="qx" /></li>
                    <li><input type="button" value="反选" class="fx" /></li>
                    <li><input type="button" value="清除" class="qc" /></li>
                    <li><input type="button" value="批量删除" class="contentdelete" /></li>
                    <li><a class="tj" href="/Admin/User_Edit" style="margin-left: 10px">添加用户</a></li>
                </ul>
                <div class="grzx_top ss_top">
                    <form action="/Admin/User_Control" method="post" style="display:inline-block">
                        <input class="ss" type="text" placeholder="账号查询" value="@Request["where"]" name="where" />
                        <button><i class="fa fa-search fa-inverse"></i></button>
                    </form>
                </div>
                <div style="overflow:auto;clear:both;">
                    <table border="0" cellspacing="0">
                        <tr>
                            <td><input type="checkbox" id="qx" /></td>
                            <td>ID</td>
                            <td>账号</td>
                            <td>密码</td>
                            <td>登录次数</td>
                            <td>上次登录时间</td>
                            <td>操作</td>
                        </tr>
                        @foreach (var m in Model)
                        {
                            <tr>
                            <td><input type="checkbox" class="checkbox" value="@m.id" /></td>
                            <td>@m.id</td>
                            <td>@m.name</td>
                            <td>@m.pwd</td>
                            <td>@m.LogoCount</td>
                            <td>@m.cdate</td>
                            <td><a href="/Admin/User_Edit?id=@m.id" class="fa fa-pencil" title="编辑"></a><a href="/Admin/User_Delete?id=@m.id" onclick="return confirm('是否删除？')" class="fa fa-trash-o" title="删除"></a></td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>暂时没有数据</p>
    }

</body>
</html>
