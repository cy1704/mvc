@model List<DBModel.User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User_Control</title>
    <link href="~/Content/Admin/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Admin/js/index.js"></script>
</head>
<body style="width:97.5%;">
    @if (Model != null)
    {
        <div class="dyj_grzx">
            <div class="grzx_top">
                <input type="text" placeholder="开始日期" />
                <input type="text" placeholder="截止日期" />
                <input type="text" placeholder="账号" />
                <button><i class="fa fa-search fa-inverse"></i></button>
            </div>
            <div class="grzx_main">
                <ul>
                    <li><input type="button" value="全选" class="qx" /></li>
                    <li><input type="button" value="反选" class="fx" /></li>
                    <li><input type="button" value="清除" class="qc" /></li>
                    <li><input type="button" value="批量删除" class="contentdelete" /></li>
                    <li><input type="button" value="添加用户" /></li>
                </ul>
                <div style="overflow:auto;">
                    <table border="0" cellspacing="0">
                        <tr>
                            <td><input type="checkbox" id="qx" /></td>
                            <td>ID</td>
                            <td>账号</td>
                            <td>密码</td>
                            <td>姓名</td>
                            <td>角色</td>
                            <td>出生年月</td>
                            <td>身份证</td>
                            <td>手机号</td>
                            <td>邮箱</td>
                            <td>地址</td>
                            <td>登录次数</td>
                            <td>上次登录时间</td>
                            <td>操作</td>
                        </tr>
                        @foreach (var m in Model)
                        {
                            <tr>
                            <td><input type="checkbox" class="checkbox" value="@m.id" /></td>
                            <td>@m.id</td>
                            <td>@m.name</td>
                            <td>@m.pwd</td>
                            <td>@m.name2</td>
                            @switch (m.grade)
                            {
                                case 0:
                                    <td><a href="#" class="a1">普通会员</a></td>
                                    break;
                                case 1:
                                    <td><a href="#" class="a2">超级会员</a></td>
                                    break;
                                case 2:
                                    <td><a href="#" class="a3">后台管理员</a></td>
                                    break;
                                default :
                                    <td><a href="#" class="a4">boss</a></td>
                                    break;
                            }
                            <td>@m.BirthDate</td>
                            <td>@m.IdentityCard</td>
                            <td>@m.Phone</td>
                            <td>@m.Email</td>
                            <td>@m.Place</td>
                            <td>@m.LogoCount</td>
                            <td>@m.cdate</td>
                            <td><a href="#" class="fa fa-pencil"></a><a href="/Admin/User_Delete?id=@m.id" onclick="return confirm('是否删除？')" class="fa fa-trash-o"></a></td>
                        </tr>
                        }
                    </table>
                </div>
                <ul>
                    <li><a href="#"><</a>1<a href="#">></a><input type="text" value="1" />页<button value="确定">共20条</button></li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <p>暂时没有数据</p>
    }

</body>
</html>
